@model IEnumerable<Quizowa.Models.Quiz>

@{
    ViewData["Title"] = "Moje Quizy";
}

<h1>Moje Quizy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Stwórz nowy quiz</a>
</p>

@if (!Model.Any())
{
<p class="text-info">Nie stworzyłeś jeszcze żadnych quizów.</p>
}
else
{
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Liczba pytań
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @(item.Questions?.Count ?? 0)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a> |
                <a asp-controller="Statistics" asp-action="QuizDetails" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Statystyki</a>
            </td>
        </tr>
            }
    </tbody>
</table>
}